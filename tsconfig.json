{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}