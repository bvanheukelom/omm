{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016", "dom" ],
    "types": ["node", "jasmine" ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}